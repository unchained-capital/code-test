{
  "name": "interview-template",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">10"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "db": "docker-compose up -d",
    "restart:db": "docker-compose rm -s -f && docker-compose up -d",
    "db:log": "npm run build && typeorm schema:log",
    "db:show": "npm run build && typeorm migration:show",
    "db:generate": "npm run build && typeorm migration:generate -n",
    "db:migrate": "npm run build && typeorm migration:run",
    "db:sync": "npm run build && typeorm schema:sync",
    "start": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.11.11",
    "@nestjs/core": "^6.11.11",
    "@nestjs/platform-express": "^6.11.11",
    "@nestjs/typeorm": "^6.3.4",
    "class-transformer": "^0.2.3",
    "dotenv": "^8.2.0",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "typeorm": "^0.2.28",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.14.2",
    "@nestjs/schematics": "^6.9.4",
    "@nestjs/testing": "^6.11.11",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.8",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.19.3",
    "@types/supertest": "^2.0.10",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "sqlite3": "^4.2.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.2.2",
    "ts-mockito": "^2.6.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typeorm-fixtures-cli": "^1.8.0",
    "typescript": "^3.9.7",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
